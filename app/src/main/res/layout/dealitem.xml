<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/lineback"
    android:padding="5dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/bookImage"
        android:adjustViewBounds="true"
        android:src="@drawable/bookdemo"
        android:padding="5dp"
        android:background="@drawable/lineback"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bookBack"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/bookImage"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookName"
            android:text="Book Name"
            android:textSize="18sp"
            android:textColor="#c16060"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookDesc"
            android:text="1234567890123456789012345678901234567890123456789012345678901234567890"
            android:textSize="13sp"
            android:textColor="#225a7e"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookAuthor"
            android:layout_below="@id/bookName"
            android:layout_toRightOf="@id/bookImage"
            android:text="- Author Name"
            android:textSize="15sp"
            android:textColor="#c16060"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookPriceBack"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bookImage">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookPrice"
            android:text="₹ "
            android:textSize="14sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookMRP"
            android:text="₹ "
            android:textSize="14sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookDisc"
            android:text="56%"
            android:textSize="14sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>